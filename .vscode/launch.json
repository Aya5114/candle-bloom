{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost (My Shop Site)",
            "url": "http://localhost:5500",  // Changed to port 5500 (common for Live Server extension)
            "webRoot": "${workspaceFolder}",
            "sourceMaps": true,  // Enables JS debugging if you add source maps later
            "userDataDir": true  // Uses a separate Chrome profile to avoid interfering with your main browser
        },
        {
            "type": "msedge",  // Optional: Add for Edge browser debugging
            "request": "launch",
            "name": "Launch Edge against localhost",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}"
        }
    ]
}